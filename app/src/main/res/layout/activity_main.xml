<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.rafael.lightsensor.MainActivity"
    >

    <TextView
        android:text="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/t_helloC"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/t_lightAcc" />

    <TextView
        android:id="@+id/sample_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Light Sensor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:id="@+id/textView"
        android:layout_below="@+id/t_helloC"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="No Accuracy Changes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/t_lightAcc"
        android:layout_alignBaseline="@+id/textview423"
        android:layout_alignBottom="@+id/textview423"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="31dp" />

    <TextView
        android:text="0"
        android:layout_gravity="center_vertical|right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/t_lumens"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="11dp"
        android:layout_below="@+id/textView"
        android:layout_toStartOf="@+id/textview423" />

    <TextView
        android:text="Lux"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textview423"
        android:layout_alignBaseline="@+id/t_lumens"
        android:layout_alignBottom="@+id/t_lumens"
        android:layout_toStartOf="@+id/textView"
        android:layout_marginEnd="18dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_send"
        android:id="@+id/button"
        android:onClick="sendMessage"
        android:layout_alignBottom="@+id/edit_message"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/edit_message"
        android:hint="@string/edit_message"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Accelerometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:id="@+id/textView2"
        android:layout_below="@+id/t_lightAcc"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="No Accuracy Changes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_alignStart="@+id/t_lightAcc"
        android:layout_marginTop="13dp"
        android:id="@+id/t_accelerometerAcc" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/t_accelerometerAcc"
        android:layout_alignEnd="@+id/textview423"
        android:id="@+id/t_acelerometerX" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t_acelerometerX"
        android:layout_alignStart="@+id/t_acelerometerX"
        android:layout_marginTop="16dp"
        android:id="@+id/t_acelerometerY" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/t_acelerometerZ"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/t_acelerometerY"
        android:layout_alignStart="@+id/t_acelerometerY" />

</RelativeLayout>
